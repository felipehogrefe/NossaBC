<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_margin="4dp"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="4dp"
            android:src="@drawable/random_face"></ImageView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:orientation="vertical">
        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="nome do alvoUsuario"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/nomeAlvo"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="nome do metaUsuario"
                android:id="@+id/nomeSender"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="snap da msg"
                android:paddingLeft="4dp"
                android:id="@+id/snapMensagem"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>